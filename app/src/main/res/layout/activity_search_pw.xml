<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".SearchPWActivity">

    <TextView
        android:id="@+id/searchPW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="80dp"
        android:fontFamily="@font/font3"
        android:text="비밀번호 재설정"
        android:textColor="#161B73"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.887" />

    <EditText
        android:id="@+id/searchPW_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="아이디"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/searchPW"
        app:layout_constraintStart_toStartOf="@+id/searchPW"
        app:layout_constraintTop_toBottomOf="@+id/searchPW" />

    <EditText
        android:id="@+id/searchPW_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="이메일"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/searchPW_id"
        app:layout_constraintStart_toStartOf="@+id/searchPW_id"
        app:layout_constraintTop_toBottomOf="@+id/searchPW_id" />

    <Button
        android:id="@+id/mailSent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="메일 발송"
        app:layout_constraintEnd_toEndOf="@+id/searchPW_email"
        app:layout_constraintStart_toStartOf="@+id/searchPW_email"
        app:layout_constraintTop_toBottomOf="@+id/searchPW_email" />
</androidx.constraintlayout.widget.ConstraintLayout>